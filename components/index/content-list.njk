<div class="content">
  <h2 class="content__heading">Table of Contents</h2>
  {% for content in collections.content %}
    <div class="accordion">
      <h3 class="accordion__heading">
        <button class="accordion__toggle" aria-expanded="false" aria-controls="{{ content.data.title | slug }}-content" id="{{ content.data.title | slug }}">
          <p class="accordion__title">{{ content.data.title | safe }}</p>
          {% if content.data.subtitle %}
            <p class="accordion__subtitle">{{ content.data.subtitle | safe }}</p>
          {% endif %}
          <svg class="accordion__toggle-icon" width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M23.245 4l-11.245 14.374-11.219-14.374-.781.619 12 15.381 12-15.391-.755-.609z"/></svg>
        </button>
      </h3>
      <div class="accordion__content" id="{{ content.data.title | slug }}-content" hidden>
        <article class="content-item">
          {% if content.data.blurb %}
            <div class="content-item__blurb">
              {{ content.data.blurb | safe }}
            </div>
          {% endif %}
          <div class="content-item__main">
            {{ content.templateContent | safe }}
          </div>
        </article>
      </div>
    </div>
  {% endfor %}
  <div class="content__contact container">
    <p>Please <a rel='noopener' href='mailto:stories@chinatown.today'>connect with us</a> if you have any questions about this publication, or if you'd like to report an error or typo.</p>
  </div>
  {#<button class="bounce-back" type="button">Back to Top<svg class="" width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M23.245 4l-11.245 14.374-11.219-14.374-.781.619 12 15.381 12-15.391-.755-.609z"/></svg></button>#}
</div>
